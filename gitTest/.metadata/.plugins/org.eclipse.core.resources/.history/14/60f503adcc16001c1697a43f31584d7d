package 자바페스티벌1차;

public class ex23번2차원배열90도회전 {

	public static void main(String[] args) {
		int[][] array = new int[5][5];
		int num = 1;
		System.out.println("원본");
//		array[0][0] = 1
//		array[0][1] = 2
//		array[0][2] = 3
//		array[0][3] = 4
//		array[0][4] = 5
//		
//		array[1][0] = 6
//		array[1][1] = 7
//		array[1][2] = 8
//		array[1][3] = 9
//		array[1][4] = 10
		for(int i = 0; i<array.length;i++) {
			for(int j = 0; j<array.length; j++) {
				array[i][j] = num;
				System.out.printf(" %2d ", array[i][j]);
				num++;
			}
			System.out.println();
		}num=5;
		System.out.println();
		System.out.println("90도 회전");
		for(int i = 0;i<array.length;i++) {
			for(int j = 0;j<array.length;j++) {
				array[i][j] = num;
				num+=5;
				System.out.println(array[i][j]);
			}
		}
		//array[0][0] = 5
		//array[0][1] = 10
		//array[0][2] = 15
		//array[0][3] = 20
		//array[0][4] = 25
		
		//array[1][0] = 4
		//array[1][1] = 9
		//array[1][2] = 14
		//array[1][3] = 19
		//array[1][4] = 24
		

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
