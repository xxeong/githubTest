package 보충;

public class NoteBook {
	
	//색상,용량,무게,크기
	
	String color;
	double battery;
	float weight;
	int size;
	boolean power;
	int sound;
	
	//생성자
	//객체를 생성할 때 필드에 있는 데이터를 초기화시키기 위해서 사용
	//1.클래스명이랑 동일하게 메소드명을 작성!
	//2.생성자도 메소드다.
	//3.리턴타입을 지정하지 않는다.(void도 작성하지 않는다)
	public NoteBook(String color, double battery, float weight, 
			int size, boolean power, int sound) {
		
		this.color = color;
		this.battery = battery;
		this.power = power;
		this.size = size;
		this.sound = sound;
		this.weight = weight;
	}
	
	// 전원을 킨다.
	public void onOff() {
		power = !power;
	}
	
	// 소리를 킨다.
	public void up(int sound) {
		this.sound=sound;
		// 동일한 변수명이 있었을 때 가까운 변수명을 잡아온다!
		// 나 자신의 필드를 지칭하고 싶을때는! this사용!
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
}
