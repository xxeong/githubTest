package 포켓몬게임;

public class Pokemon {
	
	
	// 1. 필드(속성,변수)
	// 이름, 타입, 속성, hp, 공격력, 스킬
	private String name;
	private String type;
	private int hp;
	private int attack;
	private String skill;
	
	
	
	// 2. 메소드(기능,행위)
	// 생성자
	// 1)생성자도 메소드이다.
	// 2)리턴타입을 지정하지 않는다.(voidxXx)
	// 3)오버로딩 가능하다(메소드 중복정의/동일한 이름을 가진 메소드였을때 
	//   매개변수의 개수와 타입을 다르게해서 중복으로 정의하는것)
	// 4)생성자명은 클래스명과 동일해야 한다.
	// 5)기본생성자는 생략 가능하다.
//	public Pokemon() {
//		//기본 생성자(default constructor)
//	}
	public Pokemon(String name, String type, int hp, int attack, String skill) {
		//this-->현재 내 클래스 자체를 지칭하는 키워드
		this.name = name;
		this.type = type;
		this.hp = hp;
		this.attack = attack;
		this.skill = skill;
	}
	//필드에 접근할 수 있는 공개된 기능(메소드)
	public int gethp() {//Getter메소드
		return hp;
	}
	
	public void sethp(int hp) {//Setter메소드
		this.hp=hp;
	}
	
	//Getter메소드 - name,type, skill, attack
	public String getName() {
		return name;
	}
	public String getType() {
		return type;
	}
	public String getSkill() {
		return skill;
	}
	public int getAttack() {
		return attack;
	}
	//Setter메소드 - attack
	public void setAttack(int attack) {
		this.attack=attack;
	}
	// 생성자단축키 - alt+shift
}
