package 자바페스티벌풀어보기;

import java.util.Scanner;

public class ex2번시급계산기 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("일한시간을 입력하세요 : ");
		int work = sc.nextInt();
		int pay = 5000;
		int workPay;
		if(work>8) {
			workPay = pay*8+(int)(work-8)*pay*1.5;
		}
		
		System.out.println("총 임금은 "+ +"원 입니다.");
	}

}
