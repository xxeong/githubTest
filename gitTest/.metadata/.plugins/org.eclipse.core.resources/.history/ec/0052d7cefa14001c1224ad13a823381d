package ex0914;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		pigbank gum = new pigbank();
		
		System.out.print("입금 : "+sc.nextInt());
		gum.deposit(1500);
		gum.deposit(700);
		System.out.println("현재 잔액 : "+ gum.getMoney());
		gum.withdraw(500);
		System.out.println("현재 잔액 : "+ gum.getMoney());
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
