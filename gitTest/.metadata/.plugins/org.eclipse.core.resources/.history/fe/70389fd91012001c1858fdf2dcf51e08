package 메소드기초;

public class MyMath {
	public static int LargerNumbers(int num1, int num2) {
		 //int result = 0;
		if (num1 > num2) {
			return num1;
		} else if (num1 < num2) {
			return num2;
		} else {
			return 0;}
		}

		// return result;
		public static int close10(int num1, int num2) {
			int result1 = Math.abs(num1-10);//abs절대값(음수>양수,양수>양수)
			int result2 = Math.abs(num2-10);
			
			if(result1>result2) {
				return num2;
				
			}else if(result1<result2) {
				return num1;
			}else {
				return 0;}
			}
			public static int getAbsoluteValue(int num1, int num2) {
			//  1. 첫번째 풀이 유형
//					if(num1>num2) {
//						return num1 - num2;
//					}else {
//						return num2 - num1;
//					}
					// 2. 두번쨰 풀이
					int result = num1 - num2;
					if(result<0) {
						result *= -1; // result = result *-1
					}
					return result;
					

					
					// 내 풀이
//					int result = 0;
//					if(num1>num2) {
//						result = num1-(-num2);
//					}else if(num1<num2) {
//						result = ((-num1)-num2)*(-1);
//					}else {
//						result = 0;
//					}
//					
//					
//					
//					return result;
			
			
	}
}
